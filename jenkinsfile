pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/A-akarshanSharma/Calculator.git'
            }
        }
        stage('Build') {
            steps {
                sh 'g++ -o calc calc.cpp' // Compile
            }
        }
        stage('Test') {
            steps {
                sh './calc' // Run the program
            }
        }
    }
}
